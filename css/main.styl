html,body
  height 100%
body
  font-family source-sans-pro, sans-serif
  padding 0
  margin 0
#site
  display -webkit-flex
  display flex
  -webkit-flex-flow row
  flex-flow row
  height 100%
  overflow hidden
#article
  display block
  max-width 500px
  min-height 100%
  box-sizing border-box
  padding 30px
  overflow scroll
  height 100%
#image
  width 40%
  background-image url('http://opensourcedesign.is/img/haymarket-metro-station-escalator-shaft.jpg')
  background-repeat none
  background-size cover
h1,h2
  font-family 'league_gothic', sans-serif
  text-transform uppercase
  font-weight normal
  padding 0
h1
  font-size 102px
  line-height 90px
  font-style italic
  margin-top 30px
  margin-bottom 50px
h2
  font-size 72px
  line-height 72px
  margin-bottom 30px
